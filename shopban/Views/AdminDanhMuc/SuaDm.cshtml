@model shopban.Models.DANHMUC

@{
    ViewBag.Title = "SuaDm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>SỬA DANH MỤC</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaDM)
    <div class="form-group">
        @Html.LabelFor(model => model.MaDM,"Mã danh mục: ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <p style="font:18px;padding:5px 0 0 5px">@Model.MaDM</p>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.TenDanhMuc,"Tên danh mục: ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenDanhMuc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenDanhMuc, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Trở về danh sách", "Index")
</div>
