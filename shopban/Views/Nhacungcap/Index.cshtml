@model IEnumerable<shopban.Models.NHACUNGCAP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>QUẢN LÝ NHÀ CUNG CẤP</h2>

<p>
    @Html.ActionLink("Thêm mới nhà cung cấp", "Themmoinhacungcap")
</p>
<table class="table">
    <tr>
        <th>
            Tên nhà cung cấp:
        </th>
        <th>
            Địa chỉ:
        </th>
        <th>
            Điện thoại:
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenNCC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Diachi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DienThoai)
        </td>
        <td>
            @Html.ActionLink("Sửa", "SuaNhacc", new { id=item.MaNCC }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaNCC }) |
            @Html.ActionLink("Xóa", "XoaNcc", new { id=item.MaNCC })
        </td>
    </tr>
}

</table>
