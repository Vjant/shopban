
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table align="=" center">
    <h2 style="text-align: center">ĐĂNG KÝ THÀNH VIÊN</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="=height:40px">
            <td> Họ Tên Khách Hàng:</td>
            <td>
                @Html.TextBox("HotenKH")
                @ViewData["loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td> Tên đăng nhập:</td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td> Mật khẩu:</td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["loi3"]
            </td>
        </tr>
        <tr style="height:40px">
            <td> Nhập lại mật khẩu:</td>
            <td>
                @Html.Password("nhaplaiMK")
                @ViewData["loi4"]
            </td>
        </tr>
        <tr style="height:40px">
            <td> Địa chỉ Email</td>
            <td>
                @Html.TextBox("Email")
                @ViewData["loi5"]
            </td>
        </tr>
        <tr style="height:40px">
            <td> Điện thoại</td>
            <td>
                @Html.TextBox("Dienthoai")
                @ViewData["loi6"]
            </td>
        </tr>
        <tr style="height:40px">
            <td> Ngày sinh</td>
            <td>
                <input type="date" name="Ngaysinh" />
            </td>
        </tr>
        <tr style="height:40px">
            <td> </td>
            <td>
                <input type="submit" value="Đăng ký" />
            </td>
        </tr>
    }
</table>


