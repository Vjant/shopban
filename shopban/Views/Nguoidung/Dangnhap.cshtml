<style tyle="text/css">
    .dangnhap {
        margin-top: 20px;
    }
</style>

@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>
<h5 style="color:red; text-align:center"> @ViewBag.Thongbao</h5>

<h4 style="text-align:center">ĐĂNG NHẬP</h4>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
<table align="center">
    <tr style="height:50px;">
        <td> Tên đăng nhập:</td>
        <td style="border: 1px solid #ebebeb;width: 500px">
            @Html.TextBox("TenDn")
        </td>
        <td>
            @ViewData["Loi1"]
        </td>
    </tr>
    <tr style="height:50px">
        <td align="right"> Mật khẩu:</td>
        <td style="border: 1px solid #ebebeb;">
            @Html.Password("Matkhau")
        </td>
        <td>
            @ViewData["Loi2"]
        </td>
    </tr>

    <tr style="height:50px">
        <td></td>
        <td style="border: 1px solid #ebebeb;text-align:center  ">
            <button type="submit"><span>Đăng nhập</span></button>
        </td>
    </tr>

</table>
}




